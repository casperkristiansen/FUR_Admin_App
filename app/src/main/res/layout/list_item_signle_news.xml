<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/description_event"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:alpha="50"
        android:elevation="8dp"
        android:text="Description"
        android:textAlignment="center"
        android:textColor="@color/blue_200"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_event"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toEndOf="@+id/image_event"
        app:layout_constraintTop_toBottomOf="@+id/title_event" />

    <Button
        android:id="@+id/button_event"
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:backgroundTint="#99B3B3B3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/image_event"
        android:layout_width="134dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_event"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_event"
        app:srcCompat="@android:drawable/stat_notify_sync" />

    <TextView
        android:id="@+id/title_event"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginTop="36dp"
        android:alpha="50"
        android:elevation="8dp"
        android:text="Title"
        android:textAlignment="center"
        android:textColor="@color/blue_200"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toEndOf="@+id/image_event"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:elevation="8dp"
        android:text="date"
        android:textColor="@color/blue_200"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_event"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_event" />

</androidx.constraintlayout.widget.ConstraintLayout>